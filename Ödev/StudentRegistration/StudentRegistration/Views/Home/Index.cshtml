@{
    ViewData["Title"] = "Home";
}

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="2000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/kampüs.jpg" class="d-block w-75 mx-auto" alt="First slide">
        </div>
        <div class="carousel-item">
            <img src="~/images/orta.png" class="d-block w-75 mx-auto" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img src="~/images/kampüs3.jpg" class="d-block w-75 mx-auto" alt="Third slide">
        </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<style>
    .carousel-inner img {
        max-height: 400px;
        object-fit: cover;
    }

    .carousel-control-prev, .carousel-control-next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: transparent;
        padding: 6px;
    }

    .carousel-control-prev-icon, .carousel-control-next-icon {
        background-color: #808080;
        border-radius: 50%;
        width: 18px;
        height: 18px;
    }

    .carousel-control-prev:focus, .carousel-control-next:focus {
        outline: none;
    }

    .carousel-control-prev:hover, .carousel-control-next:hover {
        background-color: transparent;
    }

    .carousel-item {
        transition: transform 1s ease-in-out;
    }
</style>
